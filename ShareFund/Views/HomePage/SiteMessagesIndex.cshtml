@using Microsoft.AspNetCore.Mvc.Localization;
@inject IHtmlLocalizer<SharedResource> Localizer
@model IEnumerable<SiteMessageModel>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h4 class="text-center offset-md-4 col-md-4"> @Localizer["SiteMessages"] </h4>

            <div class="tile-title-w-btn">
            </div>
            <div class="tile-body">
                <table class="table table-hover table-bordered" name="sampleTable">
                    <thead>
                        <tr>
                            <th> @Localizer["FullName"]</th>
                            <th> @Localizer["Email"]</th>
                            <th> @Localizer["Message"]</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.FromEmail</td>
                                <td>@item.Message</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
